{
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleNameMapper": {
    "^auth/(.*)$": "<rootDir>/src/auth/$1",
    "^utils/(.*)$": "<rootDir>/src/utils/$1",
    "^user/(.*)$": "<rootDir>/src/user/$1",
    "^todo/(.*)$": "<rootDir>/src/todo/$1"
  },
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
